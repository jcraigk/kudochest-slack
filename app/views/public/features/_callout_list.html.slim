#features-list
  .columns
    .column.has-text-centered
      h1.title = t('features.list_of_features')
      h2.subtitle = t('features.click_for_detail')

  .columns
    .column.is-third
      .marketing-callout
        ul
          - %i[give_plusplus give_emoji give_modal give_groups notifications moderation].each do |key|
            li = feature_modal_link(key)

    .column.is-third
      .marketing-callout
        ul
          - %i[levelup bonus_kudos loot_shop web_profile responses weekly_report].each do |key|
            li = feature_modal_link(key)

    .column.is-third
      .marketing-callout
        ul
          - %i[bonus_calculator history team_wallboard data app_settings help].each do |key|
            li = feature_modal_link(key)

  .columns
    .column.has-text-centered
      = link_to icon_and_text('question', t('features.help')),
                help_path,
                class: 'button is-primary btn-cta'
      = link_to icon_and_text('dollar-sign', t('features.pricing')),
                pricing_path,
                class: 'button is-primary btn-cta'
      = link_to icon_and_text('comments-alt', t('features.support')),
                support_path,
                class: 'button is-primary btn-cta'
