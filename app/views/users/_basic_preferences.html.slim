= form_with model: current_user,
            url: update_preferences_user_path(current_user),
            method: :patch,
            local: true do |f|

  .card
    header.card-header
      p.card-header-title = t('nav.web_prefs')
    .card-content

      .field.is-horizontal
        .field-label.is-normal
          = f.label :theme, t('users.theme'), class: 'label'
        .field-body
          .field
            .control
              .select
                = f.select :theme, User.theme.options

  br
  = submit_button
